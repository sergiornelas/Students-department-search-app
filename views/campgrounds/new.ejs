<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Crea una nueva habitación disponible</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name = "name" placeholder="Titulo">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name = "price" placeholder="Precio" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name = "image" placeholder="Imagen">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name = "description" placeholder="Descripción">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Enviar!</button>
                </div>
            </form>
            <a href="/campgrounds">Atŕas</a>
        </div>
    </div>
</div>

