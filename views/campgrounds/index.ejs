<% include ../partials/header %>
<head>
    <!-- VISTA MOVIL -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Bienvenido estudiante!</h1>
            <p>Ve nuestros cuartos disponibles alrededor de Guadalajara!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Añadir nueva habitación</a>
            </p>
        </div>
    </header>

    <div class="row text-center" >
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail" style="">
                    <img src="<%= campground.image %>">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <!-- Mongo creates that id automatically -->
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Más Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>