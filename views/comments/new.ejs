<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Añade comentario nuevo a <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name = "comment[text]" placeholder="Texto">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">¡Publicar!</button>
                </div>
            </form>
            <a href="/campgrounds">Atrás</a>
        </div>
    </div>
</div>

